<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                http://www.springframework.org/schema/beans/spring-beans.xsd
                http://www.springframework.org/schema/context
                http://www.springframework.org/schema/context/spring-context.xsd http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc.xsd">
    <!--1 扫描web层下的注解类-->
    <context:component-scan base-package="com.dhc.ttshop.web"/>
    <!--2 mvc的注解驱动-->
    <!--@RequestMapping @ResponseBody @RequestParam jackson Object转成json-->
    <mvc:annotation-driven/>

    <!--3 添加视图解析器-->
    <!--比如： return "index";   /WEB-INF/jsp/index.jsp-->
    <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <!--前缀-->
        <property name="prefix" value="/WEB-INF/jsp/"/>
        <!--后缀-->
        <property name="suffix" value=".jsp"/>
    </bean>

    <!--4 文件上传解析器-->
    <!--文件上传依赖jar，pom文件添加依赖-->
    <bean id="multipartResolver"
          class="org.springframework.web.multipart.commons.CommonsMultipartResolver">
        <property name="defaultEncoding">
            <value>UTF-8</value>
        </property>
        <property name="maxUploadSize">
            <!-- 10M -->
            <value>10485760</value>
        </property>
        <property name="maxInMemorySize">
            <value>4096</value>
        </property>
    </bean>

    <!--5 静态资源解析（静态资源放行）-->
    <!--比如：http://localhost:8080/ttshop/js/xxx/test.jsp 放行：不经过action，直接访问静态资源-->
    <!--js文件-->
    <mvc:resources mapping="/js/**" location="/js/"/>
    <!--css样式表文件-->
    <mvc:resources mapping="/css/**" location="/css/"/>
    <!--图片文件-->
    <mvc:resources mapping="/images/**" location="/images/"/>
    <!--存放百度富文本编辑器的目录-->
    <mvc:resources mapping="/ueditor/**" location="/ueditor/"/>


</beans>